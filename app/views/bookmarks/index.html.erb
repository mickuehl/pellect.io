<% content_for :javascript do %>
<script>
	$('document').ready(function() {
		intervalID = setInterval(checkScroll, 200);
	})
</script>
<% end %>

<div class="row content">
	
	<div class="large-7 columns">
		<ul class="inline-list ">
			<li><%= link_to 'ALL', '/bookmarks' %></li>
			<li><%= link_to 'NEW', '/n' %></li>
			<li><%= link_to 'FAVORITES', '/f' %></li>
			<li><%= link_to 'ARCHIVE', '/a' %></li>
		</ul>
	</div>
	
	<div class="large-5 columns">
		<div class="bookmarks-stats">You curated
			<%= @bookmark_count_all %> resources
			<% if @bookmark_count_unread > 0 %>
			(<%= @bookmark_count_unread %> unread)
			<% end %>
			so far.
		</div>
	</div>
	
	<div class="small-12 columns bookmarks">
		<div class="bookmark-input">
			<%= form_for(@bookmark) do |f| %>
			<%= text_field_tag :url, params[:url], class: "b-input", id: "appendedInputButton", placeholder: "Add a new bookmarkâ€¦"  %>
			<% end %>
		</div>
		<% if !@bookmarks.blank?%>
		<div class="bookmarks-stream">
			<%= render :partial => "bookmark", :collection => @bookmarks%>
		</div>
		<% end %>
	</div>

</div>
