<div class="authform">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
	    <h3>Log in</h3>
	    <%= devise_error_messages! %>
		
	    <div class="form-group">
			<%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: "Email address" %>
	      	<%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
	    </div>
	
		<%= f.submit 'Log in', :class => 'button right [secondary success alert]' %>
		
		<% if devise_mapping.rememberable? -%>
			<div class="checkbox">
				<%= f.check_box :remember_me %> <%= f.label :remember_me %>
			</div>
	    <% end -%>
		
		<div class="form-bottom">
			<ul class="inline-list right">
				<%- if devise_mapping.recoverable? %>
		        	<li><%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %></li>
		      	<% end %>
			</ul>
		</div>
		
	<% end %>
</div>
