<div class="authform">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
	    <h3>Sign up</h3>
	    <%= devise_error_messages! %>
	    
		<div class="form-group">
	    	<%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: "Email address" %>
	    </div>
	    
		<div class="form-group">
	    	<%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
	    </div>
	    
		<div class="form-group">
	    	<%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Repeat your Password" %>
	    </div>
     <%= f.submit 'Sign up', :class => 'button right [secondary success alert]' %>
	 <% end %>
</div>
